@using WebApplication1.HtmlHelper
@using WebApplication1.Models
@model WebApplication1.Models.Patient

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Pacjent</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PESEL)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PESEL)
        </dd>
    </dl>
    <h3>
        @Html.DisplayNameFor(model => model.Exams)
    </h3>
    @Html.ActionLink("Dodaj badanie", "Create", "Exam", new {UserId = Model.ID}, new {@class = "btn btn-success"})

    @if (Model.Exams.Any())
    {
        var headItem = Model.Exams.First();

        <table class="table">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => headItem.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => headItem.Issued)
                </th>
                <th>
                    @Html.Status(headItem.Result?.Complete)
                </th>
                @if (User.IsInRole("admin"))
                {
                    @* Just to make last column*@
                    <th></th>
                }
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Exams)
            {
                <tr class="row-link clickable-row" data-href="@Url.Action("Details", new {id = item.Id})">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Issued)
                    </td>
                    <td>
                        @* @Html.DisplayFor(modelItem => item.Result.Complete)*@
                        @Html.Status(item.Result?.Complete)
                    </td>
                    @if (User.IsInRole("admin"))
                    {
                        <td>
                            @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new {@class = "btn btn-default"})
                            @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new {@class = "btn btn-danger"})
                        </td>
                    }
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <h4>Brak zleconych badań</h4>
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new {id = Model.ID}) |
    @Html.ActionLink("Back to List", "Index")
</p>